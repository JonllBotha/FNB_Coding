#lesson 1
def greet(name):
            print(“hello, {name}”)

greet(“Alice”)

def add(a, b):
            return a + b

result ) add(2, 5)
print(result)


def factorial(n):
if n==0:
                        return 1
            else:
                        return n*factorial(n-1)

def greet(name, greeting=”hello”):
            print(f”{greeting}, {name}”)

greet(“Bob”)
greet(“Bob”, “Good Morning”) #changes the greeting temporarily

#lesson 2 math operations
math_operations.py
def add(a, b):
            return a + b

def subtract(a, b):
            return a – b


modules.py
import math_operations

print(math_operations.add(5, 2))

print(math_operations.subtract(5, 2))

